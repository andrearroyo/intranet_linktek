@page "/"
@layout LoginLayout
@inject NavigationManager navega
@inject SweetAlertService Swal


<div class="account-pages my-5 pt-sm-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6 col-xl-5">
                <div class="card overflow-hidden">
                    <div class="bg-primary bg-soft">
                        <div class="row">
                            <div class="col-7">
                                <div class="text-primary p-4">
                                    <h6 class="text-primary">Bienvenido nuevamente!</h6>
                                    <small>Ingresa tus datos para acceder</small>
                                </div>
                            </div>
                            <div class="col-5 align-self-end">
                                <img src="images/profile-img.png" alt="" class="img-fluid">
                            </div>
                        </div>
                    </div>
                    <div class="card-body pt-0">
                        <div class="auth-logo">
                            <a class="auth-logo-light" href="/">
                                <div class="avatar-md profile-user-wid mb-4">
                                    <span class="avatar-title rounded-circle bg-light">
                                        <img src="images/logo-light.svg" alt="" class="rounded-circle" height="34">
                                    </span>
                                </div>
                            </a>

                            <a class="auth-logo-dark" href="/">
                                <div class="avatar-md profile-user-wid mb-4">
                                    <span class="avatar-title rounded-circle bg-light">
                                        <img src="images/logo.svg" alt="" class="rounded-circle" height="34">
                                    </span>
                                </div>
                            </a>
                        </div>
                        <div class="p-2">
                            <form class="form-horizontal">
                                <div class="mb-3">
                                    <label for="username" class="form-label">Usuario</label>
                                    <input type="text" class="form-control" id="username" placeholder="Ingresa tu usuario" @bind-value="@username">
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">Contraseña</label>
                                    <div class="input-group mb-3">
                                        <input type="@tipo" class="form-control" placeholder="Ingresa tu contraseña" aria-label="Ingresa tu contraseña" aria-describedby="basic-addon2" @bind-value="@password">
                                        <button class="btn btn-light " type="button" @onclick="@MostrarPassword">
                                            <i class="bx @icono"></i>
                                        </button>
                                    </div>
                                </div>

                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="remember-check">
                                    <label class="form-check-label" for="remember-check">
                                        Recordar tus datos
                                    </label>
                                </div>

                                <div class="mt-3 d-grid">
                                    <input type="button" class="btn btn-primary waves-effect waves-light" @onclick="@Acceder" value="Acceder" />
                                </div>

                                <div class="mt-4 text-center">
                                    <a href="auth-recoverpw.html" class="text-muted"><i class="mdi mdi-lock me-1"></i> ¿Olvidaste tu contraseña?</a>
                                </div>
                            </form>
                        </div>

                    </div>
                </div>
                <div class="mt-5 text-center">

                    <div>
                        <p>¿No tienes una cuenta? <a href="auth-register.html" class="fw-medium text-primary"> solicita una </a> </p>
                        <p>
                            ©
                            2021 Skote. Desarrollado <i class="mdi mdi-heart text-danger"></i> por Link Tek SAC
                        </p>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>


@code {

    public string icono { get; set; } = "";
    public string tipo { get; set; } = "";
    private string username { get; set; } = "";
    private string password { get; set; } = "";


    protected override Task OnInitializedAsync()
    {
        icono = "ri-eye-fill";
        tipo = "password";
        return base.OnInitializedAsync();
    }

    private void MostrarPassword()
    {
        if (tipo == "password")
        {
            icono = "ri-eye-off-fill";
            tipo = "text";
        }
        else
        {
            icono = "ri-eye-fill";
            tipo = "password";
        }
    }

    public async void Acceder()
    {
        navega.NavigateTo("/dashboard/home");
        username = "";
        password = "";

    }

}